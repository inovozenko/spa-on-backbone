<project name="Your Project" default="grunt-build">

    <target name="npm-install">
        <exec executable="npm" dir=".">
            <arg value="install" />
        </exec>
    </target>

    <target name="bower-install">
        <exec executable="bower" dir=".">
            <arg value="install" />
        </exec>
    </target>

    <target name="grunt-build">
        <exec executable="grunt" dir=".">
            <arg value="build" />
        </exec>
    </target>

    <target name="grunt-serve">
        <exec executable="grunt" dir=".">
            <arg value="serve" />
        </exec>
    </target>

    <target name="csscomb-all">
        <exec executable="csscomb">
            <arg value="assets/scss" />
        </exec>
    </target>

</project>